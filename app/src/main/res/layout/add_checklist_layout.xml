<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addChecklistLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_170sdp"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/add_checklist_background">

    <ImageView
        android:id="@+id/addChecklistIcon"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_32sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/ic_checklist"
        app:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addChecklistText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:fontFamily="@font/ubuntu_bold"
        android:includeFontPadding="false"
        android:text="@string/add_checklist"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintTop_toTopOf="@id/addChecklistIcon"
        app:layout_constraintBottom_toBottomOf="@id/addChecklistIcon"
        app:layout_constraintStart_toEndOf="@id/addChecklistIcon" />

    <LinearLayout
        android:id="@+id/checklist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/addChecklistText"
        app:layout_constraintBottom_toTopOf="@id/addChecklistItemInput">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <EditText
        android:id="@+id/addChecklistItemInput"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_30sdp"
        android:inputType="text"
        android:fontFamily="@font/ubuntu_regular"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        android:hint="@string/type_item_names_here"
        android:textColorHint="@color/textHintColour"
        android:importantForAutofill="no"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="@id/addChecklistIcon"
        app:layout_constraintBottom_toBottomOf="@id/addChecklistLayout"/>

    <TextView
        android:id="@+id/addItemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_6sdp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="@string/add_item"
        android:textColor="@color/accent"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toEndOf="@+id/addChecklistItemInput"
        app:layout_constraintBottom_toBottomOf="@id/addChecklistItemInput"
        app:layout_constraintTop_toTopOf="@+id/addChecklistItemInput"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/accent"
        app:layout_constraintBottom_toTopOf="@id/addChecklistItemInput"/>


</androidx.constraintlayout.widget.ConstraintLayout>